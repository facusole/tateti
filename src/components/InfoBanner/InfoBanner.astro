---
import Stats from "../Stats.astro";
---

<section>
    <article>
        <div class="box"></div>
        <Stats stat={"+230"} statName={"Encomiendas"} />
    </article>
    <article>
        <div class="box"></div>
        <Stats stat={"+30"} statName={"Envios"} />
    </article>
    <article>
        <div class="box"></div>
        <Stats stat={"+12"} statName={"Viajes"} />
    </article>
    <article>
        <div class="box"></div>
        <Stats stat={"+3"} statName={"Escuelas"} />
    </article>
</section>

<style>
    section {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 5rem;
        align-items: center;
        overflow-x: scroll;
        scrollbar-width: 0;

        border: 1px solid var(--purple-700);
        border-radius: 1rem;

        margin: 5rem 1rem;
        padding: 4rem;
    }

    section::-webkit-scrollbar {
        display: none;
    }

    article {
        display: flex;
        gap: 2rem;
        flex-direction: column;
        align-items: center;
    }

    .box {
        width: 40px;
        height: 40px;
        border: 1px solid black;
    }
</style>
